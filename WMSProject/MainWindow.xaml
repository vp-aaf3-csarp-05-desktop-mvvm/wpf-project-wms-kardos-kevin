<Window x:Class="WMSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:EmployeeViewModel />
    </Window.DataContext>

    <WrapPanel>
        <Border BorderBrush="Black"
                BorderThickness="3"
                CornerRadius="10"
                Padding="20"
                Margin="20 10"
                >
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label FontWeight="ExtraBlack">Név:</Label>
                    <Label Content="{Binding Name}"
                           Padding="0"
                           VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontWeight="ExtraBlack" >Adószám:</Label>
                    <Label Content="{Binding TaxNumber}"
                           Padding="0"
                           VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label FontWeight="ExtraBlack">Kivett szabadnapok száma:</Label>
                    <Label Content="{Binding DaysOff}"
                           Padding="0"
                           VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </WrapPanel>
</Window>
